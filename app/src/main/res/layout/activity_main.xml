<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnButterKnife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Butterknife"
        app:layout_constraintBottom_toTopOf="@+id/btnKotlinSynthetics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKotlinSynthetics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin Synthetics"
        app:layout_constraintBottom_toTopOf="@+id/btnViewBinding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnButterKnife" />

    <Button
        android:id="@+id/btnViewBinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="view binding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKotlinSynthetics" />
</androidx.constraintlayout.widget.ConstraintLayout>